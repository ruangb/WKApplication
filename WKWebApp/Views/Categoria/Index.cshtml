@model IEnumerable<WKDomain.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<br />

<a asp-controller="Categoria" asp-action="inserir" class="btn btn-primary btn-sm">Nova Categoria</a>

<hr />

<table class="table table-striped table-hover" id="dataTable">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="text-align:center">
                    <button type="submit" class="btn btn-info btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-success btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-danger btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

