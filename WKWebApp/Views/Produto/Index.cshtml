@model IEnumerable<WKDomain.Models.Produto>

    @{
    ViewData["Title"] = "Produtos";
    }

    <br />

    <a asp-action="inserir" asp-controller="produto" class="btn btn-primary btn-sm">Novo Produto</a>

    <hr />

    <table class="table table-striped table-hover" id="dataTable">
        <thead>
            <tr class="success">
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Preco)</th>
                <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td style="text-align:center">
                    <button type="submit" class="btn btn-info btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-success btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-danger btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Deletar", "Deletar", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

